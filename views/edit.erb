<div>
  <form method = "post" action = "/pizza-orders/<%=@order.id%>">
    <%#name is the same as the has key, for and id must be the same this helps with text readers%>

        <label style = "margin-right: 29px" for="first-name"> First Name: </label>
          <input id="first-name" type="text" name="first_name" value = <%=@order.first_name%> > </br>
        <label style = "margin-right: 31px" for="last-name"> Last Name: </label>
          <input id="last-name" type="text" name="last_name" value = <%=@order.last_name%>>
      </br>
        <label style = "margin-right: 8px" for="pizza-select">Select a Pizza: </label>
          <select id="pizza-select" name="topping">
            <option value="Margherita"<%= "selected" if @order.topping == "Margherita"%>>Margherita</option>
            <option value="Calzone"<%= "selected" if @order.topping == "Calzone"%>>Calzone</option>
            <option value="Italian Sausage"<%= "selected" if @order.topping == "Italian Sausage"%>>Italian Sausage</option>
          </select>
      </br>
        <label style = "margin-right: 49px" for="quantity"> Quantity: </label>
          <input id="quantity" type="number" name="quantity" value = <%=@order.quantity%>>

    <input type="submit" value="Update"/>
  </form>
</div>
